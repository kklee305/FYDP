<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fydp.smarttouchassistant"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.fydp.smarttouchassistant.SplashScreen"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fydp.smarttouchassistant.DisplayOptionsActivity"
            android:label="@string/title_activity_display_options"
            android:launchMode="singleTask"
            android:parentActivityName="com.fydp.smarttouchassistant.BluetoothConnectionActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fydp.smarttouchassistant.MainScreen" />
        </activity>
        <activity
            android:name="com.fydp.smarttouchassistant.MacroActivity"
            android:label="@string/title_activity_macro"
            android:launchMode="singleTask"
            android:parentActivityName="com.fydp.smarttouchassistant.DisplayOptionsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fydp.smarttouchassistant.DisplayOptionsActivity" />
        </activity>
        <activity
            android:name="com.fydp.smarttouchassistant.MouseActivity"
            android:label="@string/title_activity_mouse"
            android:launchMode="singleTask"
            android:parentActivityName="com.fydp.smarttouchassistant.DisplayOptionsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fydp.smarttouchassistant.DisplayOptionsActivity" />
        </activity>
        <activity
            android:name="com.fydp.smarttouchassistant.MacroControllerActivity"
            android:label="@string/title_activity_macro_controller"
            android:launchMode="singleTask"
            android:parentActivityName="com.fydp.smarttouchassistant.MacroActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fydp.smarttouchassistant.MacroActivity" />
        </activity>
        <activity
            android:name="com.fydp.smarttouchassistant.ControllerActivity"
            android:label="@string/title_activity_controller"
            android:launchMode="singleTask"
            android:parentActivityName="com.fydp.smarttouchassistant.DisplayOptionsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fydp.smarttouchassistant.DisplayOptionsActivity" />
        </activity>
        <activity
            android:name="com.fydp.smarttouchassistant.NumpadActivity"
            android:label="@string/title_activity_numpad"
            android:launchMode="singleTask"
            android:parentActivityName="com.fydp.smarttouchassistant.DisplayOptionsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fydp.smarttouchassistant.DisplayOptionsActivity" />
        </activity>
        <activity
            android:name="com.fydp.smarttouchassistant.MultiMediaActivity"
            android:label="@string/title_activity_multi_media"
            android:launchMode="singleTask"
            android:parentActivityName="com.fydp.smarttouchassistant.DisplayOptionsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fydp.smarttouchassistant.DisplayOptionsActivity" />
        </activity>
        <activity
            android:name="com.fydp.smarttouchassistant.FileExplorerActivity"
            android:label="@string/fileExplorerOption"
            android:launchMode="singleTask"
            android:parentActivityName="com.fydp.smarttouchassistant.DisplayOptionsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fydp.smarttouchassistant.DisplayOptionsActivity" />
        </activity>
        <activity
            android:name="com.fydp.smarttouchassistant.BluetoothConnectionActivity"
            android:label="@string/title_activity_bluetooth_connection"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.fydp.smarttouchassistant.UserSettingsActivity"
            android:label="@string/title_activity_user_settings"
            android:parentActivityName="com.fydp.smarttouchassistant.DisplayOptionsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fydp.smarttouchassistant.DisplayOptionsActivity" />
        </activity>

        <service android:name="com.fydp.service.BluetoothConnectionService" />
    </application>

</manifest>